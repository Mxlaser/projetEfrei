{% extends 'base.html.twig' %}

{% block title %}Détails du film{% endblock %}

{% block body %}
    <h1>{{ films.originalTitle }}</h1>
    <p>Date de sortie : {{ films.releaseDate|date('d/m/Y') }}</p>
    <p>ID IMDB : {{ films.imdbId }}</p>

    <h2>Articles en lien avec ce film</h2>
    {% if articles|length > 0 %}
        <ul>
            {% for article in articles %}
                <li>{{ article.titre }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun article n'est lié à ce film.</p>
    {% endif %}
    
    <a href="{{ path('app_films') }}">Retour à la liste des films</a>
{% endblock %}
